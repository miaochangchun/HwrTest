<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="行叠写设置: "/>
        <RadioGroup
            android:id="@+id/rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="行写"/>
            <RadioButton
                android:id="@+id/rb_overlap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="叠写"
                android:checked="true"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="识别范围: "/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/cb_gbk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GBK"
                android:textSize="20sp"/>
            <CheckBox
                android:id="@+id/cb_gb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GB"
                android:textSize="20sp"/>
            <CheckBox
                android:id="@+id/cb_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数字"
                android:textSize="20sp"/>
            <CheckBox
                android:id="@+id/cb_alpha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="字母"
                android:textSize="20sp"/>
            <CheckBox
                android:id="@+id/cb_punc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标点"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="候选字个数："/>
        <Spinner
            android:id="@+id/sp_candi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Spinner>
    </LinearLayout>
</LinearLayout>
